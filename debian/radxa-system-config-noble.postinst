#!/bin/sh
set -e

case $1 in
    configure|triggered)
        if [ -e /usr/share/kubuntu-default-settings/kf5-settings/kdeglobals ]
        then
            sed -i "s/BrowserApplication=firefox_firefox.desktop/BrowserApplication=firefox-esr.desktop/" \
                /usr/share/kubuntu-default-settings/kf5-settings/kdeglobals
        fi
        ;;
esac
    
#DEBHELPER#

exit 0